<UserControl x:Class="LogosLoggingUtility.Controllers.CardController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogosLoggingUtility.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="8" Background="White">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image x:Name="CardIcon" Height="32" Width="32" Margin="5,0,10,0"></Image>
            <Label x:Name="CardName" Grid.Column="1" FontSize="18" FontWeight="Bold" FontFamily="Source Sans Pro" Foreground="#3d3d3d" VerticalAlignment="Center">Card Header</Label>
        </Grid>
    </Border>
</UserControl>
