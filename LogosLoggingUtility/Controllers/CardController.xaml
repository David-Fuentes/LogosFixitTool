<UserControl x:Class="LogosLoggingUtility.Controllers.CardController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogosLoggingUtility.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Background="White">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="CardIcon" Source="/Images/DefaultIcon.png" Height="16" Width="16" Margin="5,0,0,0"></Image>
                <Label x:Name="CardName" Margin="0,0,0,0" FontSize="16" FontWeight="Bold">Card Header</Label>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
