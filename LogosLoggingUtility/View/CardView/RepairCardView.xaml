<UserControl x:Class="LogosLoggingUtility.View.CardView.RepairCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogosLoggingUtility.View.CardView"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="270">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Bttn_RepairLogos" 
                Click="Bttn_RepairLogos_Click" 
                Content="Repair Logos" 
                FontSize="26" 
                Foreground="White" 
                CommandParameter="Logos"
                Grid.Row="0"
                Margin="2"/>
        
        <Button x:Name="Bttn_RepairVerbum" 
                Click="Bttn_RepairLogos_Click" 
                Content="Repair Verbum" 
                FontSize="26" 
                Foreground="White" 
                CommandParameter="Verbum"
                Grid.Row="1"
                Margin="2"/>
    </Grid>
</UserControl>
