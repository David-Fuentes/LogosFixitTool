<Window x:Class="LogosLoggingUtility.View.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogosLoggingUtility.View"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Border CornerRadius="32" Background="#E8F2FF" BorderBrush="Black" BorderThickness="4">
        <StackPanel>
            <Label x:Name="CardHeader" Content="Card header" HorizontalAlignment="Center" FontSize="30"/>
            <ItemsControl x:Name="CardFeatureList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="* " FontWeight="Bold"/>
                            <TextBlock Text="{Binding Path=FeatureName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding FeatureDescription}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</Window>
