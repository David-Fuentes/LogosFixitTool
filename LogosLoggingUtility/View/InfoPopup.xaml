<UserControl x:Class="LogosLoggingUtility.View.InfoPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogosLoggingUtility.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="32" Background="#E8F2FF" BorderBrush="Black" BorderThickness="4">
        <StackPanel>
            <Label x:Name="CardHeader" Content="Card header" HorizontalAlignment="Center" FontSize="30"/>
            <ListView x:Name="CardFeatureList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="* " FontWeight="Bold"/>
                            <TextBlock Text="{Binding Path=Feature}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Path=FeatureDescription}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Border>
</UserControl>
